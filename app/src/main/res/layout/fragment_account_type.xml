<?xml version="1.0" encoding="utf-8"?>

<layout>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/bottom_sheet_rounded_bg"
        android:layout_width="match_parent"
        android:layout_height="400dp">


        <TextView
            android:id="@+id/account_type_text"
            android:layout_width="300dp"
            android:layout_height="@dimen/_70dp"
            android:text="Select Account Type"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            android:paddingLeft="@dimen/_20dp"
            android:drawableLeft="@drawable/merchant_account"
            android:drawablePadding="@dimen/_10dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/iswColorPrimary"
            android:background="@drawable/isw_bg_card_primary_color_light"
            android:layout_marginTop="20dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/isw_default_account"
            android:layout_width="300dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/_20dp"
            android:text="Default Account"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            app:cornerRadius="8dp"
            android:background="@drawable/isw_bg_card"
            android:textAllCaps="false"
            app:rippleColor="@color/grey"
            app:layout_constraintTop_toBottomOf="@+id/account_type_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/iswColorPrimary"
            app:strokeWidth="1dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/isw_savings_account"
            android:layout_width="300dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/_20dp"
            android:text="Savings Account"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            app:cornerRadius="8dp"
            android:background="@drawable/isw_bg_card"
            android:textAllCaps="false"
            app:rippleColor="@color/grey"
            app:layout_constraintTop_toBottomOf="@+id/isw_default_account"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/iswColorPrimary"
            app:strokeWidth="1dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/isw_current_account"
            android:layout_width="300dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/_20dp"
            android:text="Current Account"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            app:cornerRadius="8dp"
            android:background="@drawable/isw_bg_card"
            android:textAllCaps="false"
            app:rippleColor="@color/grey"
            app:layout_constraintTop_toBottomOf="@+id/isw_savings_account"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/iswColorPrimary"
            app:strokeWidth="1dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

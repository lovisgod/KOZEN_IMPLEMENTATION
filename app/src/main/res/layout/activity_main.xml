<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/erase_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Erase Keys"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dukpy_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download DUKPT"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/erase_key"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/pinkey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download PinKey"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dukpy_key" />

    <Button
        android:id="@+id/read_term_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read Terminal Info"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pinkey" />

    <Button
        android:id="@+id/downl_term_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download Terminal Info"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/read_term_info" />

    <Button
        android:id="@+id/get_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get ISW TOKEN"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/downl_term_info" />

    <Button
        android:id="@+id/start_trans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Transaction"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/get_token" />

    <Button
        android:id="@+id/get_transaction_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Transaction Data"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_trans" />

</androidx.constraintlayout.widget.ConstraintLayout>